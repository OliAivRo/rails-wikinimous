<%= form_with model: @article do |f| %>
<div class="card">
  <div class="card-body">

    <div class="mb-3">
      <%= f.label :title, { class: "form-label"} %>
      <%= f.text_field :title, { class: "form-control", placeholder: "Title of the article" } %>
    </div>

    <div class="mb-3">
      <%= f.label :content, { class: "form-label"} %>
      <%= f.text_field :content, { class: "form-control", placeholder: "Content for the article" } %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary" %>

  </div>
</div>
<% end %>
